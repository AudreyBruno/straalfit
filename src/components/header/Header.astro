<header
  class="bg-black/80 backdrop-blur-sm fixed top-0 left-0 right-0 z-50 border-b border-gray-800"
>
  <div class="container mx-auto flex justify-between items-center p-4">
    <a href="#inicio" class="text-3xl font-black text-white"
      >STRAAL<span class="text-yellow-400">FIT</span></a
    >
    <nav class="hidden md:flex space-x-8">
      <a href="#inicio" class="nav-link text-lg font-semibold">Início</a>
      <a href="#sobre" class="nav-link text-lg font-semibold">Sobre Nós</a>
      <a href="#personals" class="nav-link text-lg font-semibold">Personais</a>
      <a href="#contato" class="nav-link text-lg font-semibold">Contato</a>
    </nav>
    <button id="mobile-menu-button" class="md:hidden text-white text-2xl">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <!-- Menu Mobile -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-black border-t border-gray-800"
  >
    <a
      href="#inicio"
      class="block text-center py-3 text-lg hover:bg-purple-700 transition-colors"
      >Início</a
    >
    <a
      href="#sobre"
      class="block text-center py-3 text-lg hover:bg-purple-700 transition-colors"
      >Sobre Nós</a
    >
    <a
      href="#personals"
      class="block text-center py-3 text-lg hover:bg-purple-700 transition-colors"
      >Personals</a
    >
    <a
      href="#contato"
      class="block text-center py-3 text-lg hover:bg-purple-700 transition-colors"
      >Contato</a
    >
  </div>
</header>

<script is:client>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    if (!btn || !menu) return;

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });

    menu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
      });
    });
  });
</script>
